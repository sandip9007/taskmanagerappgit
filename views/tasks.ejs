<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script defer type="text/javascript" src="/js/app.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="css/style.css">
    <title>Document</title>
</head>
<body>
    
        <div class="container">
            <h1>List of Tasks</h1>
        <p class="headerLink"><a href="/memberpage">Create tasks</a></p>
        <table class="dataTable">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Description</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% for(var i = 0; i<tasks.length; i++) {%>
                <tr>
                    <td><%= i+1 %></td>
                    <td><%= tasks[i].description %></td>
                    <td><%= tasks[i].completed %></td>
                    <td>
                        <a href="/edituser?id=<%= tasks[i]._id %>" class="btn border-shadow update">
                            <span class="text-gradient">
                                <i class="fa fa-pencil" aria-hidden="true"></i>
                            </span>
                        </a>
                        <a href="/deleteuser?id=<%= tasks[i]._id %>" class="btn border-shadow delete">
                            <span class="text-gradient">
                                <i class="fa fa-times" aria-hidden="true"></i>
                            </span>
                        </a>
                    </td>
                </tr>
                
                <%  } %>
        </tbody>
       
    </table>
    </div>
</body>
</html>